{% extends 'base.html.twig' %}

{% block title %}Hello SecurityController!{% endblock %}

{% block body %}

<div class="example-wrapper">
    <h1>Connexion</h1>
    <form action="{{ path('app_signin') }}" method="post">
        <div class="mb-3">
            <label class="form-label required" for="username">Email</label>
            <input class="form-control" type="email" name="_username" id="username" value="{{ last_username }}">
        </div>
        <div class="mb-3">
            <label class="form-label required" for="password">Mot de passe</label>
            <input class="form-control" type="password" name="_password" id="password" >
        </div>
        <label>
            <input type="checkbox" name="_remember_me" checked>
            Rester connect√©
        </label>
        <input type="hidden" name='_target_path' value='/profile'>
        <input type="hidden" name='_csrf_token' value='{{ csrf_token('authenticate') }}'>
        <div class="mb-3">
            <button class="btn-primary btn" type="submit">Envoyer</button>
        </div>
    </form>
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    
</div>
{% endblock %}
